@using PetShop.Enum;
@model PetShop.ViewModels.AnimalViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar animal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Color" class="control-label fw-bold"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label fw-bold"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<AnimalType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhotoFile" class="control-label fw-bold"></label>
                <input asp-for="PhotoFile" class="form-control" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Observation" class="control-label fw-bold"></label>
                <textarea asp-for="Observation" class="form-control"></textarea>
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary w-100 my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
