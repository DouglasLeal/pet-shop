@using PetShop.Enum;
@model PetShop.ViewModels.ProductViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CostPrice" class="control-label fw-bold"></label>
                <input asp-for="CostPrice" type="number" step="0.01" min="0" max="1000" class="form-control" />
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SalePrice" class="control-label fw-bold"></label>
                <input asp-for="SalePrice" type="number" step="0.01" min="0" max="1000" class="form-control" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label fw-bold"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<AnimalType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhotoFile" class="control-label fw-bold"></label>
                <input asp-for="PhotoFile" class="form-control" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
